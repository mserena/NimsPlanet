        <!-- Propiedades del tablero -->
        <BoardMaxCells value="8"/> <!-- Define el tamaño que tendrán las celdas del tablero en pantalla -->
        
        <!-- Restrictions -->
        <!-- 0-time, 1-movements -->
        <restriction type="1" value="50"/>
        
        <!-- Goals -->
        <!-- 0-score, 1-break, 2-downobjects,3-collect figures,4-collect blocks(rocks) 5-break rocks, 6-network -->
