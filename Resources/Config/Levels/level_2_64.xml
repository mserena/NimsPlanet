        <goal type="6" value="2" optional="false"/>
        <goal type="3" figure="1" value="50" optional="false"/>
        <goal type="3" figure="3" value="50" optional="false"/>
        <goal type="3" figure="5" value="50" optional="false"/>
        
        
        <!-- Score stars-->
        <stars scores="8000,11000,15000"/>
        
        <!-- Figures weight -->
        <figureWeight id="0" weight="4"/>
