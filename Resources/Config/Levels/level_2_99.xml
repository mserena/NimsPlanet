<?xml version="1.0"?>
<Levels>
    <Level id="99">
        <!-- Propiedades del tablero -->
        <BoardMaxCells value="7"/> <!-- Define el tamaño que tendrán las celdas del tablero en pantalla -->
        
        <!-- Restrictions -->
        <!-- 0-time, 1-movements -->
        <restriction type="1" value="60"/>
        
        <!-- Goals -->
        <!-- 0-score, 1-break, 2-downobjects, 3-collect figures, 4-collect blocks(rocks) 5-break rocks, 6-network -->
        <goal type="1" value="10" optional="false"/>
        <goal type="5" value="10" optional="false"/>
        <goal type="3" figure="3" value="70" optional="false"/>
        <goal type="3" figure="4" value="70" optional="false"/>
        <goal type="3" figure="5" value="70" optional="false"/>
        
        <!-- Score stars-->
        <stars scores="5000,9000,18000"/>
        
        <!-- Figures weight -->
        <figureWeight id="0" weight="2"/>
        <figureWeight id="1" weight="0"/>
        <figureWeight id="2" weight="3"/>
        <figureWeight id="3" weight="3"/>
        <figureWeight id="4" weight="3"/>
        <figureWeight id="5" weight="2"/>
        
        <!-- Map -->
        <row rowDescriptor="C0,C0,C0,C1,C1,C1,C1"/>
        <row rowDescriptor="C2[S0T2|S1T2],C2[S0T2|S1T2],C0,C1,C1,C1,C1"/>
        <row rowDescriptor="C2[S0T2|S1T2],C2[S0T2|S1T2],C0,C1,C1,C1,C1"/>
        <row rowDescriptor="C2[S0T2|S1T2],C2[S0T2|S1T2],C0,C1,C1,C1,C1"/>
        <row rowDescriptor="C2[S0T2|S1T2],C2[S0T2|S1T2],C0,C1,C1,C1,C1"/>
        <row rowDescriptor="C2[S0T2|S1T2],C2[S0T2|S1T2],C0,C1,C1,C1,C1"/>
        <row rowDescriptor="C0,C0,C0,C1,C1,C1,C1"/>
        
        <!-- Background -->
        <background src="bgForest.jpg"/>
        
    </Level>
</Levels>