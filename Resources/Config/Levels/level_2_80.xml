<?xml version="1.0"?>
<Levels>
    <Level id="80">
        <!-- Propiedades del tablero -->
        <BoardMaxCells value="8"/> <!-- Define el tamaño que tendrán las celdas del tablero en pantalla -->
        
        <!-- Restrictions -->
        <!-- 0-time, 1-movements -->
        <restriction type="1" value="45"/>
        
        <!-- Goals -->
        <!-- 0-score, 1-break, 2-downobjects, 3-collect figures, 4-collect blocks(rocks) 5-break rocks, 6-network -->
        <goal type="2" value="3" initWeight="2" maxWeight="10" increaseWeight="5" optional="false"/>
        <goal type="4" value="3" optional="false"/>
        <goal type="5" value="3" optional="false"/>
        <goal type="6" value="3" optional="false"/>
        
        
        <!-- Score stars-->
        <stars scores="4000,9000,14000"/>
        
        <!-- Figures weight -->
        <figureWeight id="0" weight="1"/>
        <figureWeight id="1" weight="1"/>
        <figureWeight id="2" weight="1"/>
        <figureWeight id="3" weight="0"/>
        <figureWeight id="4" weight="1"/>
        <figureWeight id="5" weight="1"/>
        
        <!-- Map -->
        <row rowDescriptor="C1,C2[D5],C1,C2[D5],C1,C2[D5],C1"/>
        <row rowDescriptor="C1,C2[S2T3],C1,C2[S2T3],C1,C2[S2T3],C1"/>
        <row rowDescriptor="C1,C1,C1,C1,C1,C1,C1"/>
        <row rowDescriptor="C1,C1,C1,C1,C1,C1,C1"/>
        <row rowDescriptor="C1,C1,C1,C1,C1,C1,C1"/>
        <row rowDescriptor="C1,C1,C1,C1,C1,C1,C1"/>
        <row rowDescriptor="C1,C2[S1T2],C0,C2[S1T2],C0,C2[S1T2],C1"/>
        <row rowDescriptor="C1,C2[D0T0|S3T1],C1,C2[D0T1|S3T1],C1,C2[D0T2|S3T1],C1"/>
        
        
        <!-- Background -->
        <background src="bgForest.jpg"/>
        
    </Level>
</Levels>